<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/card_view_one"
    android:layout_gravity="center"
    android:layout_height="187dp"
    android:layout_marginBottom="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_width="318dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.244"
    design:cardBackgroundColor="@color/cardview_light_background"
    design:cardCornerRadius="7dp"
    design:layout_constraintBottom_toBottomOf="parent"
    design:layout_constraintLeft_toLeftOf="parent"
    design:layout_constraintRight_toRightOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:design="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <ImageView
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:id="@+id/news_thumbnail"
            android:layout_height="111dp"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/patchnotes" />

        <ImageView
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:id="@+id/news_icon"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/news_thumbnail"
            android:layout_height="wrap_content"
            android:layout_marginStart="11dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/ic_news" />

        <TextView
            android:fontFamily="roboto"
            android:id="@+id/news_title"
            android:layout_alignTop="@+id/news_icon"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_toEndOf="@+id/news_icon"
            android:layout_width="200dp"
            android:lines="1"
            android:text="SC1 Patch Notes Released"
            android:textAlignment="textStart"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textStyle="bold"
            android:typeface="monospace" />

        <TextView
            android:id="@+id/news_description"
            android:layout_alignStart="@+id/news_title"
            android:layout_below="@+id/news_title"
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:text="New Broodwar Remastered patch notes released as of 2017/06/08"
            android:textAlignment="viewStart"
            android:textAllCaps="false"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="12sp" />

    </RelativeLayout>


</android.support.v7.widget.CardView>